</div>
<script>
    $(document).ready(function() {
        Bindbranch();
    });
    var PrecticalDetail = () => {
        let isprectical = $('#isprectical').is(':checked');
        if (isprectical) {
            $('.prec').removeClass('d-none');
        }
        else {
            $('.prec').addClass('d-none');
        }
    }
    var submitdata = () => {
        let isprectical = false;
        if ($('#ddlprogram option:selected').val() == '') {
            alert('Please Select Branch');
            $('#ddlprogram').focus();
            return false;
        }
        if ($('#ddlbranch option:selected').val() == '') {
            alert('Please Select Branch');
            $('#ddlbranch').focus();
            return false;
        }
        if ($('#ddlyear option:selected').val() == '') {
            alert('Please Select Year');
            $('#ddlyear').focus();
            return false;
        }

        if ($('#txtsubjectname').val() == '') {
            alert('Please Enter Subject Name');
            $('#txtsubjectname').focus();
            return false;
        }
        if ($('#txtsubjectCode').val() == '') {
            alert('Please Enter Subject Code');
            $('#txtsubjectCode').focus();
            return false;
        }
        if ($('#ddlsubjecttype option:selected').val() == '') {
            alert('Please Select Type');
            $('#ddlsubjecttype').focus();
            return false;
        }
        if ($('#txttheoryMarks').val() == '') {
            alert('Please Enter Theory Marks');
            $('#txttheoryMarks').focus();
            return false;
        }
        if ($('#isprectical').is(':checked')) {
            isprectical = true;
            if ($('#txtprecticalMarks').val() == '') {
                alert('Please Enter Practical Marks');
                $('#txtprecticalMarks').focus();
                return false;
            }
            if ($('#txtPrecPassingmarks').val() == '') {
                alert('Please Enter Prectical Passing Marks');
                $('#txtPrecPassingmarks').focus();
                return false;
            }
        }
        if ($('#txtpassing').val() == '') {
            alert('Please Enter Passing Marks');
            $('#txtpassing').focus();
            return false;
        }
        if ($('#ddlsubjecttype option:selected').val() == '') {
            alert('Please Enter Passing Marks');
            $('#ddlsubjecttype').focus();
            return false;
        }
        let obj = {
            Program: $('#ddlprogram option:selected').val(),
            Branch: $('#ddlbranch option:selected').val(),
            BranchId: $('#ddlbranch option:selected').val(),
            Year: $('#ddlyear option:selected').val(),
            SubjectName: $('#txtsubjectname').val(),
            SubjectCode: $('#txtsubjectCode').val(),
            SubjectType: $('#ddlsubjecttype option:selected').val(),
            TheoryMarks: $('#txttheoryMarks').val(),
            PracticalMarks: $('#txtprecticalMarks').val(),
            PassingMarks: $('#txtpassing').val(),
            IsPrectical:isprectical,
            PecticalPassingMarks:$('#txtPrecPassingmarks').val()
        }
        preloader.load();
        $.post('/Master/SaveSubjectMaster', obj).done(function(result) {
            preloader.remove();
            alertnotify(result.statuscode, result.msg);
        }).fail(function(xhr) {
            alert("Server Error");
        });
    }
    var Bindbranch = () => {
        $.post('/Admission/BindProgramWiseBranch', { ProgramId: $('#ddlprogram option:selected').val() }).done(function(result) {
            $('#ddlbranch').empty();
            for (var i = 0; i < result.length; i++) {
                $('#ddlbranch').append('<option value="' + result[i].branchId + '">' + result[i].branchName + '</option>')
            }
        }).fail(function(xhr) {
            console.log(xhr.responseText)
        });
    }
</script>