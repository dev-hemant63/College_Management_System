                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <label>Select Branch<span style="color:red;">*</span></label>
                                <select class="form-control" id="ddlbranch">
                                </select>
                            </div>
                            <div class="col-sm-3">
                                <label>Select Year<span style="color:red;">*</span></label>
                                <select class="form-control" id="ddlyear">
                                    <option value="">--Select Year--</option>
                                    <option value="1">First Year</option>
                                    <option value="2">Secound Year</option>
                                    <option value="3">Third Year</option>
                                </select>
                            </div>
                            <div class="col-sm-3">
                                <label>Subject Name<span style="color:red;">*</span></label>
                                <input type="text" id="txtsubjectname" class="form-control" />
                            </div>
