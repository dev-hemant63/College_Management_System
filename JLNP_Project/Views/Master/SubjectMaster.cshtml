                                <label>Subject Code<span style="color:red;">*</span></label>
                                <input type="text" id="txtsubjectCode" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <label>Theory Marks<span style="color:red;">*</span></label>
                                <input type="text" id="txttheoryMarks" class="form-control" />
                            </div>
                            <div class="col-sm-3">
                                <label>Subject Type<span style="color:red;">*</span></label>
                                <select class="form-control" id="ddlsubjecttype">
                                    <option value="">-- Select Type --</option>
                                    <option value="optional">Optional</option>
                                    <option value="Conpalsary">Conpalsary</option>
                                </select>
                            </div>
                            <div class="col-sm-3">
                                <label>Prectical Marks<span style="color:red;">*</span></label>
                                <input type="text" id="txtsubjectMarks" class="form-control" />
                            </div>
                            <div class="col-sm-2">
                                <button class="btn btn-outline-primary" onclick="submitdata()" style="margin-top: 29px;width: 43%;">Save</button>
                            </div>
                        </div>
                        <div class="table-responsive" style="margin-top:13px;">
                            <table class="table table-bordered" id="tblbranch">
                                <thead class="bg-primary">
                                    <tr>
                                        <th>#</th>
                                        <th>Branch Name</th>
                                        <th>Year</th>
                                        <th>Subject</th>
                                        <th>Subject Code</th>
                                        <th>Subject Type</th>
                                        <th>Theory Marks</th>
                                        <th>Practical Marks</th>
                                        <th>EntryDate</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
