@model NotificationMaster
@{
    <div class="modal fade bs-example-modal-center show" tabindex="-1" id="myModalNew" role="dialog" aria-labelledby="mySmallModalLabel" aria-modal="true" style="display: block; padding-right: 17px;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit Notification</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <label>Notification Title<span style="color:red;">*</span></label>
                    <input type="text" class="form-control" id="notititle" placeholder="Notification Title" value="@Model.Notificationtitle" />
                    <label>Branch Code<span style="color:red;">*</span></label>
                    <input type="text" class="form-control" id="notidesc" value="@Model.NotificationDescription" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" onclick="SaveRecord('@Model.ID')">save</button>
                </div>
            </div>
        </div>
    </div>
}