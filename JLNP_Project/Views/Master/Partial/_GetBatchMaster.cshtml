@model List<BatchMasterReqRes>
@{
    int counter = 0;
    if (Model.Any())
    {
        foreach (var item in Model)
        {
            counter++;
            <tr>
                <td>@counter</td>
                <td>@item.FromYear</td>
                <td>@item.ToYear</td>
                <td>@item.Entrydate</td>
                <td>
                    <div class="btn-group btn-group-sm" style="float: none;">
                            <button class="tabledit-edit-button btn btn-sm btn-success" data-animation="pulse" data-toggle="modal" data-target="#exampleModalLong-1" onclick="EditbatchMaster('@item.Id')" style="float: none; margin: 4px;"><i class="fa fa-pencil"></i></button>
                            <button class="tabledit-delete-button btn btn-sm btn-danger" style="float: none; margin: 4px;" onclick="DeleteRecord('@item.Id')"><i class="fa fa-trash"></i></button>
                        </div>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td class="text-danger text-center" colspan="4">Record Not Found!</td>
        </tr>
    }
}