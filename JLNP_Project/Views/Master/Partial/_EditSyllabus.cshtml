@model SyllabusViewModel
@{
    <div class="modal fade bs-example-modal-center show" tabindex="-1" id="myModalNew" role="dialog" aria-labelledby="mySmallModalLabel" aria-modal="true" style="display: block; padding-right: 17px;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit Syllabus Master</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                <label>Program</label>
                    <select class="form-control" id="ddlprogram" asp-for="@Model.SyllabusMaster.Program">
                        <option value="">-- Select Program --</option>
                        @{
                            foreach (var item in Model.programlst)
                            {
                                <option value="@item.Id">@item.Program</option>
                            }
                        }
                    </select>
                    <label>Branch</label>
                    <select class="form-control" id="ddlbranch" asp-for="@Model.SyllabusMaster.Branch">
                        <option value="0">-- Select Branch --</option>
                        @{
                            foreach (var item in Model.Branch)
                            {
                                <option value="@item.BranchId">@item.BranchName</option>
                            }
                        }
                    </select>
                    <label>Year</label>
                    <select class="form-control" id="ddlyear" asp-for="@Model.SyllabusMaster.Year">
                        <option value="0">-- Select Year --</option>
                        <option value="1">First Year</option>
                        <option value="2">Second Year</option>
                        <option value="3">Third Year</option>
                    </select>
                    <label>Subject</label>
                    <select class="form-control" id="ddlsubject" asp-for="@Model.SyllabusMaster.Subject">
                        <option value="0">-- Select Subject --</option>
                        @{
                            foreach (var item in Model.subjectMasters)
                            {
                                <option value="@item.SubjectId">@item.SubjectName</option>
                            }
                        }
                    </select>
                    <label>Upload</label>
                    <input type="file" class="form-control" placeholder="Upload" id="file" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" onclick="Saverecord(@Model.SyllabusMaster.ID)" id="btnsave">Save</button>
                </div>
            </div>
        </div>
    </div>
}
