                            <table class="table mb-0" id="tblvideoUrl">
                                <thead class="bg-primary">
                                    <tr>
                                        <th>#</th>
                                        <th>Branch</th>
                                        <th>Year</th>
                                        <th>Subject</th>
                                        <th>Video</th>
                                        <th>Assign Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        Bindbranch();
        LoadData();
    });
    var Bindbranch = () => {
        $.post('/Admission/BindBranch').done(function(result) {
            console.log(result);
            $('#ddlbranch').empty().append('<option value="">--Select Branch--</option>');
            for (var i = 0; i < result.length; i++) {
                $('#ddlbranch').append('<option value="' + result[i].branchId + '">' + result[i].branchName + '</option>')
            }
        }).fail(function(xhr) {
            console.log(xhr.responseText)
        });
    }
    var BindSubject = () => {
        let obj = {
            BranchId: $('#ddlbranch option:selected').val(),
            Year: $('#ddlyear option:selected').val(),
        }
        $.post('/Admin/Bind_Subject', obj).done(function(result) {
            for (var i = 0; i < result.length; i++) {
                $('#ddlsubject').append('<option value="' + result[i].subjectId + '">' + result[i].subjectName + '</option>');
            }
        }).fail(function(xhr) {
            alert("Server Error");
        });
    }
    var Bindteacher = () => {
        $.post('/Admin/Bind_teacher').done(function(result) {
            console.log(result);
            for (var i = 0; i < result.length; i++) {
                $('#ddlteacher').append('<option value="' + result[i].teacherId + '">' + result[i].teacherName + '</option>');
            }
        }).fail(function(xhr) {
            alert("Server Error");
        });
    }
    function isUrlValid(str) {
        const pattern = new RegExp(
            '^(https?:\\/\\/)?' + // protocol
            '((([a-z\\d]([a-z\\d-]*[a-z\\d])*)\\.)+[a-z]{2,}|' + // domain name
            '((\\d{1,3}\\.){3}\\d{1,3}))' + // OR IP (v4) address
            '(\\:\\d+)?(\\/[-a-z\\d%_.~+]*)*' + // port and path
            '(\\?[;&a-z\\d%_.~+=-]*)?' + // query string
            '(\\#[-a-z\\d_]*)?$', // fragment locator
            'i'
        );
        return pattern.test(str);
    }
    var savedata = () => {
        let obj = {
            Id: $('#hdnid').val(),
            BranchId: $('#ddlbranch option:selected').val(),
            Year: $('#ddlyear option:selected').val(),
            SubjectId: $('#ddlsubject option:selected').val(),
            VideoUrl: $('#txturl').val()
        }
        if (obj.BranchId == '' || obj.BranchId == undefined) {
            $('#branchv').removeClass('d-none');
            return false;
        }
        else {
            $('#branchv').addClass('d-none');
        }
        if (obj.Year == '' || obj.Year == undefined) {
            $('#yearv').removeClass('d-none');
            return false;
        }
        else {
            $('#yearv').addClass('d-none');
        }
        if (obj.SubjectId == '' || obj.SubjectId == undefined) {
            $('#subjectv').removeClass('d-none');
            return false;
        }
        else {
            $('#subjectv').addClass('d-none');
        }
        if (obj.VideoUrl == '' || obj.VideoUrl == undefined) {
            $('#txturlsm').removeClass('d-none');
            return false;
        }
        else {
            $('#txturlsm').addClass('d-none');
        }
        //if (!isUrlValid($('#txturl').val())) {
        //    $('#txturlsmv').removeClass('d-none');
        //    return false;
        //}
        //else {
        //    $('#txturlsmv').addClass('d-none');
        //}
        preloader.load();
        $.post('/Master/SaveAndVideoLecture', obj).done(function(result) {
            preloader.remove();
            alertnotify(result.statuscode, result.msg);
        }).fail(function(xhr) {
            console.log(xhr.responseText);
            alert('Server Error');
        });
    }
    var LoadData = function(){
        preloader.load();
        $.post('/Master/GetVideoLecture').done(function(result) {
            preloader.remove();
            $('#tblvideoUrl tbody').html(result);
        }).fail(function(xhr) {
            console.log(xhr.responseText);
            alert('Server Error');
        });
    }
</script>