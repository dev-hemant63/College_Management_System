@model List<AttendanceReq>
@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="bg-primary">
                <tr>
                    <th>#</th>
                    <th>Enrollment Number</th>
                    <th>Name</th>
                    <th>Note</th>
                    <th>Attendance</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                    foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@item.EnrollmentNO</td>
                            <td>@item.Name</td>
                            <td>@item.Note</td>
                            <td>
                                @if (item.Ispresent)
                                {
                                    <small class="badge badge-success badgecus">Present</small>
                                }
                                @if (item.Isabsent)
                                {
                                    <small class="badge badge-danger badgecus">Absent</small>
                                }
                                @if (item.Islate)
                                {
                                    <small class="badge badge-warning badgecus">Late</small>
                                }
                                @if (item.Isishalfday)
                                {
                                    <small class="badge badge-info badgecus">HalfDay</small>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning" style="height: 50px;"><p style="margin-left:2px;">No Attendance Prepared</p></div>
}