@model List<Teacher>
@{
    int i = 0;
    foreach (var item in Model)
    {
        i++;
    @if (Model.Count>0)
        {
    <tr data-Id="@item.TeacherId">
                    <td>@i</td>
                    <td class="text-nowrap">@item.Name</td>
                    <td class="text-nowrap">@item.Fname</td>
                    <td class="text-nowrap">@item.Email</td>
                    <td class="text-nowrap">@item.Mobile</td>
                    <td class="text-nowrap">@item.DOB</td>
                    <td class="text-nowrap"><i class="fa fa-inr text-success"></i>@item.salary</td>
                    <td class="text-nowrap"></td>
                    <td class="text-nowrap">@item.Subjects</td>
                    <td class="text-nowrap">@item.PreviousCollage</td>
                    <td class="text-nowrap">@item.Address</td>
                    <td class="text-nowrap">@item.Entrydate</td>
                    <td>
                        <div class="btn-group btn-group-sm" style="float: none;">
                            <a href="/Teacher/GetTeacherById?TeacherId=@item.TeacherId" class="tabledit-edit-button btn btn-sm btn-success btn_edit" style="float: none; margin: 4px;"><span class="fa fa-pencil"></span></a>
                            <a href="javascript:void(0)" class="tabledit-delete-button btn btn-sm btn-warning" style="float: none; margin: 4px;"><span class="fa fa-location-arrow" onclick="sendpass('@item.TeacherId')"></span></a>
                            <a href="/Teacher/DeleteTeacher?TeacherId=@item.TeacherId" class="tabledit-delete-button btn btn-sm btn-danger" style="float: none; margin: 4px;"><span class="fa fa-trash"></span></a>
                        </div>
                    </td>
    </tr>
        }
        else
        {
    <tr>
                  <td style="color:red;" colspan="11" class="text-center">Record Not Found</td>
    </tr>
        }
    }
}
<script>
var sendpass = (id) =>{
    $.post('/Teacher/SendPass', {Id:id}).done((res) => {
        alertnotify(res.statuscode, res.msg);
    }).fail((xhr) => {
        alertnotify(-1, xhr.statusText);
        console.log(xhr.responseText);
    });
}
</script>