@{
    Layout = "_LayoutStudent";
}
@model StudentVideolecture
<div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box bgred">
                    <div class="float-right hide-phone">
                    </div>
                    <h4 class="page-title">Wellcome @Model.UserName</h4>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <section class="header">
                    <div class="container">
                        <header class="text-center mb-2 pb-2 text-white">
                            <h3 class="display-4" style="color:black; font-size: 37px;">Video Lecture</h3>
                            <p class="font-italic">
                                <a class="text-white" href="">
                                    <u></u>
                                </a>
                            </p>
                        </header>
                        <div class="table-responsive">
                            <table class="table table-bordered text-nowrap" id="tblstudentassignment">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Subject</th>
                                        <th>Lectures</th>
                                        @* <th>Action</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        @if (Model.data.Count>0)
                                        {
                                            int i = 0;
                                            @foreach (var item in Model.data)
                                            {
                                                i++;
                                                <td>@i</td>
                                            <td>@item.Subject</td>
                                            <td><a href="@item.VideoUrl" target="_blank">View Lecture</a></td>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center text-danger">Record not found</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>