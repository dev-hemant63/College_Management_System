@model List<Student>
@{
    int i = 0;
    @if (Model.Count>0) {
        foreach (var item in Model)
        {
            i++;
            <tr data-Student-Id="@item.Id">
                <td>@i</td>
                <td class="text-nowrap">@item.Name</td>
                <td class="text-nowrap">@item.Fname</td>
                <td class="text-nowrap">@item.MotherName</td>
                <td class="text-nowrap">@item.FatherOccupation</td>
                <td class="text-nowrap">@item.Email</td>
                <td class="text-nowrap">@item.Mobile</td>
                <td class="text-nowrap">@item.DOB</td>
                <td class="text-nowrap">@item.RegistrationNo</td>
                <td class="text-nowrap">@item.ProgramName</td>
                <td class="text-nowrap">@item.Branch</td>
                <td class="text-nowrap">@item.AdmissionTypeName</td>
                <td class="text-nowrap">@item.Address</td>
                <td class="text-nowrap">@item.Gender</td>
                <td class="text-nowrap">@item.EntryDate</td>
            </tr>
        } 
    }
    else
    {
       <tr>
        <td style="color:red;" colspan="17" class="text-center">Record Not Found</td>
       </tr>
    }
}