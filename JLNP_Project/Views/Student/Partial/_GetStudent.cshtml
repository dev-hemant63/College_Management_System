@model List<Student>
@{
    int i = 0;
    @if (Model.Count>0) {
        foreach (var item in Model)
        {
            i++;
            <tr data-Student-Id="@item.Id">
                <td>@i</td>
                <td>@item.Name</td>
                <td>@item.Fname</td>
                <td>@item.MotherName</td>
                <td>@item.FatherOccupation</td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>
                <td>@item.DOB</td>
                <td>@item.Entrolment_No</td>
                <td>@item.ProgramName</td>
                <td>@item.Branch</td>
                <td>@item.Address</td>
                <td>@item.Gender</td>
                <td>@item.Group</td>
                <td>@item.EntryDate</td>
                <td>
                    <div class="btn-group btn-group-sm" style="float: none;">
                        <a href="/Student/GetStudentById?Id=@item.Id" class="tabledit-edit-button btn btn-sm btn-success btn_edit" style="float: none; margin: 4px;"><span class="ti-pencil"></span></a>
                        <a href="/Student/DeleteStudent?Id=@item.Id" class="tabledit-delete-button btn btn-sm btn-danger" style="float: none; margin: 4px;"><span class="ti-trash"></span></a>
                    </div>
                </td>
            </tr>
        } 
    }
    else
    {
       <tr>
        <td style="color:red;" colspan="17" class="text-center">Record Not Found</td>
       </tr>
    }
}