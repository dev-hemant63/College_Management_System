@{
    Layout = "_LayoutStudent";
}
@model StudentInfo
<style>
    marquee{
             font-size: 18px;
        font-weight: 300;
        color: black;
        font-family: sans-serif;
          }
</style>
<div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box bgred">
                    <div class="float-right hide-phone">
                    </div>
                    <h4 class="page-title">Wellcome  @Model.Name</h4>
                </div>
            </div>
        </div>
        <marquee><span id="impnotify"></span></marquee>
        <div class="row">

            <!-- end col -->
            <div class="col-xl-4 col-sm-12 col-md-4">
                <div class="card-box widget-box-two widget-two-custom B1">
                    <div class="media">
                        <div class="avatar-lg rounded-circle bg-primary widget-two-icon align-self-center">
                            <i class="mdi mdi-account-multiple avatar-title font-30 text-white"></i>
                        </div>
                        <div class="wigdet-two-content media-body">
                            <p class="m-0 text-uppercase font-weight-medium text-truncate" title="Statistics">Notification</p>
                            <h3 class="font-weight-medium my-2">
                                <span id="notifycount"></span>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end col -->
            <div class="col-xl-4 col-sm-12 col-md-4">
                <div class="card-box widget-box-two widget-two-custom B2">
                    <div class="media">
                        <div class="avatar-lg rounded-circle bg-primary widget-two-icon align-self-center">
                            <i class="mdi mdi-crown avatar-title font-30 text-white"></i>
                        </div>
                        <div class="wigdet-two-content media-body">
                            <p class="m-0 text-uppercase font-weight-medium text-truncate" title="Statistics">Events</p>
                            <h3 class="font-weight-medium my-2">
                            </h3>

                        </div>
                    </div>
                </div>
            </div>
            <!-- end col -->
            <div class="col-xl-4 col-sm-12 col-md-4">
                <div class="card-box widget-box-two widget-two-custom B3">
                    <div class="media">
                        <div class="avatar-lg rounded-circle bg-primary widget-two-icon align-self-center">
                            <i class="mdi mdi-auto-fix  avatar-title font-30 text-white"></i>
                        </div>
                        <div class="wigdet-two-content media-body">
                            <p class="m-0 text-uppercase font-weight-medium text-truncate" title="Statistics">Attendance</p>
                            <h3 class="font-weight-medium my-2">
                            </h3>

                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-4-xxxl col-12">
                <div class="card dashboard-card-ten">
                    <div class="card-body">
                        <div class="heading-layout1">
                            <div class="item-title">
                                <h3>About Me</h3>
                            </div>
                        </div>
                        <div class="student-info">
                            <div class="media media-none--xs">
                                <div class="item-img">
                                    <img src="/Assessts3/images/userimg.png" width="72px" height="72px" class="media-img-auto" alt="student">
                                </div>
                                <div class="media-body">
                                    <h3 class="item-title">@Model.Name</h3>
                                    <p>
                                        Aliquam erat volutpat. Curabiene natis massa
                                        sedde lacustiquen sodale word moun taiery.
                                    </p>
                                </div>
                            </div>
                            <div class="table-responsive info-table">
                                <table class="table text-nowrap">
                                    <tbody>
                                        <tr>
                                            <th>Name:</th>
                                            <td class="font-medium text-dark-medium">@Model.Name</td>
                                        </tr>
                                        <tr>
                                            <th>Gender:</th>
                                            <td class="font-medium text-dark-medium">@Model.Gender</td>
                                        </tr>
                                        <tr>
                                            <th>Father Name:</th>
                                            <td class="font-medium text-dark-medium">@Model.FatherName</td>
                                        </tr>
                                       @* <tr>
                                            <td>Mother Name:</td>
                                            <td class="font-medium text-dark-medium">@Model.MotherName</td>
                                        </tr>*@
                                        <tr>
                                            <th>Date Of Birth:</th>
                                            <td class="font-medium text-dark-medium">@Model.DOB</td>
                                        </tr>
                                        @*<tr>
                                            <td>Religion:</td>
                                            <td class="font-medium text-dark-medium">@Model.Religion</td>
                                        </tr>*@
                                        @*<tr>
                                            <td>Father Occupation:</td>
                                            <td class="font-medium text-dark-medium">@Model.FatherOccupation</td>
                                        </tr>*@
                                        <tr>
                                            <th>E-Mail:</th>
                                            <td class="font-medium text-dark-medium">@Model.EMail</td>
                                        </tr>
                                        <tr>
                                            <th>Admission Date:</th>
                                            <td class="font-medium text-dark-medium">@Model.AdmissionDate</td>
                                        </tr>
                                        <tr>
                                            <th>Branch:</th>
                                            <td class="font-medium text-dark-medium">@Model.Branch</td>
                                        </tr>
                                        <tr>
                                            <th>Year:</th>
                                            <td class="font-medium text-dark-medium">@Model.Year</td>
                                        </tr>
                                        <tr>
                                            <th>Enrollment:</th>
                                            <td class="font-medium text-dark-medium">@Model.EnrollmentNO</td>
                                        </tr>
                                        <tr>
                                            <th>Adress:</th>
                                            <td class="font-medium text-dark-medium">@Model.Adress</td>
                                        </tr>
                                        <tr>
                                            <th>Phone:</td>
                                            <td class="font-medium text-dark-medium">@Model.Phone</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="notify"></div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        loadnotify();
        loaddata();
    });
    var loadnotify = () => {
        $.post('/Student/GetNotification').done(function(result) {
            $('#notify').html(result);
        }).fail(function(xhr) {
            console.log(xhr.responseText);
        });
    }
    var loaddata = () => {
        $.post('/Student/GetStudentInfo').done(function(result) {
            if (result.statuscode == 1) {
                $('#impnotify').text(result.notificationDescription);
                $('#notifycount').text(result.notifyCount);
            }
            else {
                alert(result.msg);
            }
        }).fail(function(xhr) {
            console.log(xhr.responseText);
        });
    }
</script>