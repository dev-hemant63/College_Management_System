@{
    Layout = null;
}
<!-- App favicon -->
<title>Login | </title>
<link rel="shortcut icon" href="~/login/assets/images/favicon.ico">
<!-- App css -->
<link href="~/login/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="bootstrap-stylesheet" />
<link href="~/login/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
<link href="~/login/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-stylesheet" />
<link href="~/css/Custom.css" rel="stylesheet" type="text/css" id="app-stylesheet" />
<div class="authentication-bg bg-primary authentication-bg-pattern d-flex align-items-center pb-0 vh-100">
    <div class="home-btn d-none d-sm-block">
    </div>
    <div class="account-pages w-100 mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mb-0">
                        <div class="card-body p-4">
                            <div class="account-box">
                                <div class="account-logo-box">
                                    <div class="text-center">
                                        <a href="#">
                                            <img src="~/login/assets/images/logo-dark.png" alt="" height="30">
                                        </a>
                                    </div>
                                    @if (ViewBag.msg != null)
                                    {
                                        <h4 class="text-uppercase mb-1 mt-4 danger" style="color: red">@ViewBag.msg</h4>
                                    }


                                </div>
                                <div class="account-content mt-4">
                                    <div class="form-group row">
                                        <div class="col-12">
                                            <select class="form-control" id="ddlusertype">
                                                <option value="1">Admin</option>
                                                @* <option value="2">Teacher</option>*@
                                                <option value="3">Student</option>
                                            </select>
                                        </div>
                                        <div class="col-12">
                                            <label for="emailaddress">Username</label>
                                            <input class="form-control" id="UserId" type="text" placeholder="User Id" required="">
                                        </div>
                                        <div class="col-12">
                                            <label for="password">Password</label>
                                            <input class="form-control" id="password" type="password" placeholder="Password" required="">
                                            <a href="#" class="text-muted float-right"><small>Forgot your password?</small></a>
                                            <span class="text-danger" id="msg"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row text-center mt-2">
                                        <div class="col-12">
                                            <button class="btn btn-md btn-block btn-primary waves-effect waves-light" type="submit" id="login">Sign In</button>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            @*<div class="text-center">
                                            <button type="button" class="btn mr-1 btn-facebook waves-effect waves-light">
                                            <i class="fab fa-facebook-f"></i>
                                            </button>
                                            <button type="button" class="btn mr-1 btn-googleplus waves-effect waves-light">
                                            <i class="fab fa-google"></i>
                                            </button>
                                            <button type="button" class="btn mr-1 btn-twitter waves-effect waves-light">
                                            <i class="fab fa-twitter"></i>
                                            </button>
                                            </div>*@
                                        </div>
                                    </div>
                                    <div class="row mt-4 pt-2">
                                        @*<div class="col-sm-12 text-center">
                                        <p class="text-muted mb-0">Don't have an account? <a href="page-register.html" class="text-dark ml-1"><b>Sign Up</b></a></p>
                                        </div>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end card-body -->
                </div>
                <!-- end card -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
</div>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/site.js"></script>
<script>
    $(document).ready(function() {
        $('#login').click(function() {
            preloader.load();
            if ($('#ddlusertype :selected').val() == '') {
                alert('Please select Login Type');
                $('#ddlusertype').focus();
                return false;
            }
            if ($('#UserId').val() == '') {
                alert('Please Enter Ueser Name');
                $('#UserId').focus();
                return false;
            }
            if ($('#password').val() == '') {
                alert('Please Enter Password');
                $('#password').focus();
                return false;
            }
            var obj = {
                LoginTypeId: $('#ddlusertype :selected').val(),
                UserId: $('#UserId').val(),
                Password: $('#password').val()
            }
            $.post('/Account/Login', obj).done(function(result) {
                preloader.remove();
                if (result.loginTypeId == 1) {
                    window.location.replace("/Admin/Index");
                }
                else if (result.loginTypeId == 2) {
                    window.location.replace("/Admin/TeacherDash");
                }
                else if (result.loginTypeId == 3) {
                    window.location.replace("/Student/Index");
                }
                else if (result.loginTypeId == -1) {
                    $('#msg').text(result.msg);
                    return false;
                }
                else if (result.statuscode == -1) {
                    $('#msg').text(result.msg);
                    return false;
                }
                else {
                    window.location.reload();
                }
            }).fail(function(xhr) {
                console.log(xhr.responiveText);
                alert('server error');
            })
        });
    });
</script>