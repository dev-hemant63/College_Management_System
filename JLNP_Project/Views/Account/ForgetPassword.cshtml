@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>Logdy - Login and Register Form HTML5 Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <link type="text/css" rel="stylesheet" href="~/Logins2/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="~/Logins2/fonts/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/Logins2/fonts/flaticon/font/flaticon.css">
    <link rel="shortcut icon" href="~/Logins2/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800%7CPoppins:400,500,700,800,900%7CRoboto:100,300,400,400i,500,700">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/Logins2/css/style.css">
    <link rel="stylesheet" type="text/css" id="style_sheet" href="~/Logins2/css/skins/default.css">
    <link href="~/css/Custom.css" rel="stylesheet" type="text/css">

</head>
<body id="top">

    <div class="page_loader"></div>

    <!-- Login 20 start -->
    <div class="login-20">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="login-inner-form">
                        <div class="details">
                            <a href="login-20.html">
                                <img src="/Assessts/img/core-img/logo_red.png" alt="logo">
                            </a>
                            <h3>Recover Your Password</h3>
                            <div class="form-group form-box">
                                <input type="text" name="enrollemnt" class="form-control" id="txtenroll" placeholder="Enrollment Number">
                                <small id="txtoldpasssm" class="text-danger d-none">Please Enter Enrollment</small>
                            </div>
                            <div class="form-group mb-0">
                                <button type="button" class="btn-md btn-theme w-100" onclick="forgetPass()">Forget</button>
                            </div>
                        </div>
                        <div class="footer">
                            <span>Already a member? <a href="/">Login here</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Logins2/js/jquery.min.js"></script>
    <script src="~/Logins2/js/popper.min.js"></script>
    <script src="~/Logins2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/dist/sweetalert2.all.min.js"></script>
    <script src="~/dist/sweetalert2.all.js"></script>
    <script>
        var forgetPass = () => {
            if ($('#txtenroll').val() == '' || $('#txtenroll').val() == undefined) {
                $('#txtoldpasssm').removeClass('d-none');
                return false;
            }
            else {
                $('#txtoldpasssm').addClass('d-none');
            }
            preloader.load();
            $.post('/Account/ForgetPasswordPost', { Enrollment: $('#txtenroll').val() }).done(function(result) {
                preloader.remove();
                alertnotify(result.statuscode, result.msg);
            }).fail(function(xhr) {
                console.log(xhr.responseText);
            });
        }
    </script>
</body>
</html>