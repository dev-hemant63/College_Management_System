@{
    Layout = "_LayoutAdmin";
}
<style>
body {font-family: Arial;}

/* Style the tab */
.tab {
  overflow: hidden;
    border: 0.5px solid #ccc;
    background-color: #f1f1f1;
    height: 38px;
    display: flex;
    align-content: flex-start;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

/* Style the buttons inside the tab */
.tab button {
  background-color: inherit;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  transition: 0.3s;
  font-size: 17px;
}

/* Change background color of buttons on hover */
.tab button:hover {
  background-color: #ddd;
}

/* Create an active/current tablink class */
.tab button.active {
    background-color: #ccc;
}
.tab button {
    font-size: 13px;
}

/* Style the tab content */
.tabcontent {
  display: none;
  padding: 6px 12px;
  border: 1px solid #ccc;
  border-top: none;
}
</style>
<div class="">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bgred">
                        <h4 style="color:white;">Time Table</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Program</label>
                                <select class="form-control" id="ddlprogram">
                                    <option value="0">:: Select Program ::</option>
                                </select>
                                <small class="text-danger d-none" id="Program">Please select program..</small>
                            </div>
                            <div class="col-sm-4">
                                <label>Branch</label>
                                <select class="form-control" id="ddlbranch">
                                    <option value="0">:: Select Branch ::</option>
                                </select>
                                <small class="text-danger d-none" id="branchv">Please select branch..</small>
                            </div>
                            <div class="col-sm-4">
                                <label>Year</label>
                                <select class="form-control" id="ddlyear">
                                    <option value="0">:: Select Year ::</option>
                                </select>
                                <small class="text-danger d-none" id="yearv">Please select year..</small>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-12" style="display: flex; justify-content: flex-end;">
                                <button class="btn btn-outline-warning" onclick="Search()">Search</button>
                            </div>
                        </div>
                        <hr />
                        <div id="divttl"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
var Search = () => {
    let obj = {
        BranchId: $('#ddlbranch option:selected').val(),
        Program: $('#ddlprogram option:selected').val(),
        Year: $('#ddlyear option:selected').val(),
    }
    if (obj.Program == '' || obj.Program == undefined) {
        $('#Program').removeClass('d-none');
        return false;
    }
    else {
        $('#Program').addClass('d-none');
    }
    if (obj.Program == '' || obj.Program == undefined) {
        $('#branchv').removeClass('d-none');
        return false;
    }
    else {
        $('#branchv').addClass('d-none');
    }
    if (obj.Year == '' || obj.Year == undefined) {
        $('#yearv').removeClass('d-none');
        return false;
    }
    else {
        $('#yearv').addClass('d-none');
    }
    preloader.load();
    $.post('/Admin/GetTimeTable', obj).done(function(result) {
        preloader.remove();
        $('#divttl').html(result);
    }).fail(function(xhr) {
        console.log(xhr.responseText);
        alert('Server Error');
    });
}
</script>