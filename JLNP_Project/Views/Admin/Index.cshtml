@model JLNP_Project.Models.SubjectMaster
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor accessor
@{
    var userdata = JsonConvert.DeserializeObject<LoginInfo>(accessor.HttpContext.Session.GetString("Userdata"));
}
@{
    Layout = "_LayoutAdmin";
}
<div class="main-content">
    <div class="dashboard-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0 font-18">Dashboard</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item active">Welcome @userdata.Name</li>
                            </ol>
                        </div>
                    </div>
                </div>

                <!-- Single Widget -->
                <div class="col-md-6 col-lg-3">
                    <div class="single-widger-cart mb-30">
                        <div class="card">
                            <div class="card-body">
                                <div class="float-right"><i class="bx bxs-user-rectangle single-widget-icon"></i></div>
                                <h5 class="font-14 mt-0">Teachers</h5>
                                <h3 class="mt-3 mb-3 font-20">@Model.TeacherCount</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Single Widget -->
                <div class="col-md-6 col-lg-3">
                    <div class="single-widger-cart mb-30">
                        <div class="card">
                            <div class="card-body">
                                <div class="float-right"><i class="bx bx-cart single-widget-icon"></i></div>
                                <h5 class="font-14 mt-0">Registartions</h5>
                                <h3 class="mt-3 mb-3 font-20">@Model.RegistrationCount</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Single Widget -->
                <div class="col-md-6 col-lg-3">
                    <div class="single-widger-cart mb-30">
                        <div class="card">
                            <div class="card-body">
                                <div class="float-right"><i class="bx bx-dollar single-widget-icon"></i></div>
                                <h5 class="font-14 mt-0">Branches</h5>
                                <h3 class="mt-3 mb-3 font-20">@Model.BranchCount</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Single Widget -->
                <div class="col-md-6 col-lg-3">
                    <div class="single-widger-cart mb-30">
                        <div class="card">
                            <div class="card-body">
                                <div class="float-right"><i class="bx bx-bar-chart-alt single-widget-icon"></i></div>
                                <h5 class="font-14 mt-0">Addmission</h5>
                                <h3 class="mt-3 mb-3 font-20">@Model.AdmissionCount</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>