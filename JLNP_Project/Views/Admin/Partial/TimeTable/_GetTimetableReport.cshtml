                            }
                        }
                        else
                        {
                            <div class="attachment-block clearfix">
                                <b class="text text-center">Not <br>Scheduled</b><br>
                            </div>
                        }
                    }
                </td>
                <td class="text text-center text-success" width="14%">
                    @{
                        if (Model.Monday.Count > 0)
                        {
                            foreach (var item in Model.Wednesday)
                            {
                                <div class="attachment-block clearfix">
                                    <b class="text-green">
                                        Subject:@item.SubjectName
                                    </b><br>
                                    <b class="text-green">
                                        Teacher:@item.Teacher
                                    </b><br>
                                    <strong class="text-green">@item.Time</strong>
                                    <strong class="text-green">Room No: @item.RoomNo</strong><br>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="attachment-block clearfix">
                                <b class="text text-center">Not <br>Scheduled</b><br>
