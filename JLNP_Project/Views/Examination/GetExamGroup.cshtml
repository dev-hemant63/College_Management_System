@model List<ExamGroupe>
@{
    int i = 0;
    foreach (var item in Model)
    {
        i++;
        <tr data-id="@item.Id">
            <td>@i</td>
            <td>@item.ExamGroupes</td>
            <td>@item.ExamCount</td>
            <td>@item.ExamTypeName</td>
            <td>@item.Entrydate</td>
            <td>
                <div class="btn-group btn-group-sm" style="float: none;">
                    <button class="tabledit-edit-button btn btn-sm btn-warning btn_edit" data-animation="pulse" data-toggle="modal" data-target="#exampleModalLong-1" onclick="AddExam('@item.Id')" style="float: none; margin: 4px;">+</button>
                    <a href="/Examination/AddExamGroup?Id=@item.Id" class="tabledit-edit-button btn btn-sm btn-success btn_edit" style="float: none; margin: 4px;"><span class="fa fa-pencil"></span></a>
                    <a href="/Examination/DeleteExamGroup?ID=@item.Id" class="tabledit-delete-button btn btn-sm btn-danger" style="float: none; margin: 4px;"><span class="fa fa-trash"></span></a>
                </div>
            </td>
        </tr>
    }
}