@{
    Layout = "_LayoutAdmin";
}
@model ExamGroupe
<link rel="stylesheet" href="~/css/Box.css" />
<div class="">
    <div class="">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bgred">
                        <h4 style="color:black;">Exam Group</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <h3 class="box-title"> Add Exam Group</h3>
                                    </div>
                                    <div class="box-body" style="padding: 10px;">
                                        <input type="hidden" name="ci_csrf_token" value="">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Name <small class="req">*</small></label>
                                            <input id="name" autofocus="" name="name" placeholder="" asp-for="@Model.ExamGroupes" type="text" class="form-control" autocomplete="off">
                                            <input type="hidden" id="hdnid" asp-for="@Model.Id" />
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1"> Exam Type</label> <small class="req">*</small>
                                            <select id="ddlexamtype" name="exam_type" placeholder="" type="text" class="form-control" asp-for="@Model.ExamType">
                                                <option value="">Select</option>
                                                @foreach (var item in @Model.ExamTypes)
                                                {
                                                    <option value="@item.Id">@item.ExamTypes</option>
                                                }
                                            </select>
                                            <span class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Description</label>
                                            <textarea class="form-control" id="description" name="description" asp-for="@Model.Description" placeholder="" rows="3"></textarea>
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="box-footer">
                                        <button type="submit" class="btn btn-info" onclick="AddExamgroupe()" style="width: 17%;">Save</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <h3 class="box-title"> Exam Group List</h3>
                                    </div>
                                    <div class="table-responsive table-striped" style="margin-top:13px;">
                                        <table class="table mb-0" id="tblexamgroup">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Name</th>
                                                    <th>No Of Exams</th>
                                                    <th>Exam Type</th>
                                                    <th>Entry Date</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    loaddata();
});
    var AddExamgroupe = () => {
        let obj = {
            ExamGroups: $('#name').val(),
            ExamTypes: $('#ddlexamtype').val(),
            Id: $('#hdnid').val(),
            Description: $('#description').val(),
        }
        if (obj.ExamGroup == '') {
            alert('Please Enter ExamGroup');
            return false;
        }
        if (obj.ExamTypes == '') {
            alert('Please Select ExamTypes');
            return false;
        }
        $.post('/Examination/SaveExamGroup', obj).done(function(result) {
            alertnotify(result.statuscode, result.msg);
        }).fail(function(xhr) {
            console(xhr.responseText);
        });
    }
    var loaddata = () => {
        $.post('/Examination/GetExamGroup').done(function(result) {
            $('#tblexamgroup tbody').html(result);
        }).fail(function(xhr) {
            console(xhr.responseText);
        });
    }
</script>