@model List<Branch>
@{
    int i = 0;
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            i++;
            <tr data-Student-Id="@item.BranchId">
                <td>@i</td>
                <td>@item.BranchName</td>
                <td>@item.BranchCode</td>
                <td>@item.TotalSheets</td>
                <td>@item.AvailableSheets</td>
                <td>@item.TotalLetaralSheets</td>
                <td>@item.AvailableLetaralSheets</td>
                <td>
                    <span class="switch switch-sm">
                        <input type="checkbox" class="switch" onclick="updateStatus('@item.BranchId','@item.BranchName','@item.BranchCode',@item.TotalSheets)" id="iscounseling_@item.BranchId" @Html.Raw(@item.IsCounseling ? "checked='checked'" : "")>
                        <label for="iscounseling_@item.BranchId"></label>
                    </span>
                </td>
                <td>@item.EntryDate</td>
                <td>
                    <div class="btn-group btn-group-sm" style="float: none;">
                        <button class="tabledit-edit-button btn btn-sm btn-success btn_edit" data-animation="pulse" data-toggle="modal" data-target="#exampleModalLong-1" onclick="editbranch(BranchId=@item.BranchId)" style="float: none; margin: 4px;"><span class="ti-pencil"></span></button>
                    </div>
                </td>
            </tr>
        }

    }
    else
    {
        <tr>
            <td style="color:red;" colspan="5" class="text-center">Record Not Found</td>
        </tr>
    }
}
<script>
    var editbranch = function(BranchId) {
        $.post('/Branch/EditBranch', { BranchId: BranchId }).done(function(result) {
            $('body').append(result);
            $('#myModalNew').modal('show');
            $('[data-dismiss="modal"]').unbind().click(function() {
                $('.modal,.modal-backdrop').remove();
            })
        }).fail(function(xhr) {
            console(xhr.responseText);
        });
    }
    
</script>